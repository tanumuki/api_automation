{
    "$schema": "http://json-schema.org/draft-07/schema",
    
    "type": "object",
    "title": "Albums Schema",
    "description": "This schema matches albums schema",
    "required": [
        "id",
        "title",
        "subtitle",
        "type",
        "image",
        "perma_url",
        "more_info",
        "explicit_content",
        "mini_obj",
        "description"
    ],
    "additionalProperties": true,
    "definitions":{    	
    	"data": {
    		"type": "object",
    		"properties": {
		        "id": {
		            "$id": "#/properties/id",
		            "type": "string",
		            "pattern": "$|^[0-9]\\d*(\\.\\d+)?$|\\d+"
		        },
		        "title": {
		            "$id": "#/properties/title",
		            "type": "string",
		            "pattern": ".+"
		        },
		        "subtitle": {
		            "$id": "#/properties/subtitle",
		            "type": "string",
		            "pattern": ".*"
		        },
		        "type": {
		            "$id": "#/properties/type",
		            "type": "string",
		            "pattern": "(album)"            
		        },
		        "image": {
		            "$id": "#/properties/image",
		            "type": "string",
		            "pattern": "^$|((https|http)://(c|www|staging|c.sop|pli|qa-az|staging-az|prod-az|static|c-origin)?.(saavn|saavncdn|jiosaavn).com/(s|editorial|artists|.+)(/.+)?.(png|jpg)?(/.+)?)|((https|http)://(c|www|staging|c.sop|qa-az|staging-az|prod-az)?.(saavn|saavncdn).com/(s|editorial|artists|.+)(/.+)?.(png|jpg)?(/.+)?)|(https://graph.facebook.com/v2.9/.+/picture|https://static.saavncdn.com/_i/share-image.png)"
		        },
		        "perma_url": {
		            "$id": "#/properties/perma_url",
		            "type": "string",
		            "pattern": "^$|((https|http)://(c|www|staging|c.sop|pli|qa-az|staging-az|prod-az|static|c-origin)?.(saavn|saavncdn|jiosaavn).com/(s|editorial|artists|.+)(/.+)?.(png|jpg)?(/.+)?)|((https|http)://(c|www|staging|c.sop|qa-az|staging-az|prod-az)?.(saavn|saavncdn).com/(s|editorial|artists|.+)(/.+)?.(png|jpg)?(/.+)?)|(https://graph.facebook.com/v2.9/.+/picture|https://static.saavncdn.com/_i/share-image.png)"
		        },
		        "more_info": {
		            "$ref": "albumMoreInfo.schema.json#/definitions/more_info"
		        },
		        "explicit_content": {
		            "$id": "#/properties/explicit_content",
		            "type": "string",
		            "pattern": "(^$|0|1)"
		        },
		        "mini_obj": {
		            "$id": "#/properties/mini_obj",
		            "type": "boolean"
		        },
		        "description": {
		            "$id": "#/properties/description",
		            "type": "string",
		            "pattern": ".*"
		        }
		    }
    	}
    }
    
}